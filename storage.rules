rules_version = '2';

// https://firebase.google.com/docs/storage/security
service firebase.storage {
  match /b/{bucket}/o {
    // Permite que qualquer pessoa leia os arquivos.
    // Isso é necessário para que as imagens de prova e de perfil sejam visíveis no app.
    match /{allPaths=**} {
      allow read;
    }

    // Permite que apenas usuários autenticados escrevam (upload) na pasta de provas.
    match /influencer-proofs/{influencerId}/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
