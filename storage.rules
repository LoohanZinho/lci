rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Permite que qualquer pessoa leia os arquivos (necessário para exibir imagens no app).
      allow read;
      
      // Permite a escrita apenas se o usuário estiver autenticado.
      // A lógica de upload no nosso app usa o Admin SDK, que ignora essa regra,
      // mas é uma boa prática manter a segurança para uploads diretos via cliente.
      allow write: if request.auth != null;
    }
  }
}
